<style>
th, td{
  padding-left: 20px;
}
</style>

<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Car model</th>
      <th>Car make</th>
      <th>Car year</th>
      <th>Cust</th>	
      <th>License plate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @belongstocust = Car.where(cust_id: @customer.cust_id) %>
    <% @belongstocust.each do |car| %>
      <tr>
        <td><%= car.car_model %></td>
        <td><%= car.car_make %></td>
        <td><%= car.car_year %></td>
        <td><%= car.cust_id %></td>
        <td><%= car.license_plate %></td>
        <td><%= link_to 'Create New Invoice', new_invoice_path(@invoice, :cust_id => car.cust_id, :car_vin => car.car_vin) %>
        <td><%= link_to 'View Invoices', showinvoice_car_path(car) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Back', customers_path %>
