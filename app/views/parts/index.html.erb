<p id="notice"><%= notice %></p>

<h1>Parts</h1>

<table>
  <thead>
    <tr>
      <th>Part</th>
      <th>Part name</th>
      <th>Part cost</th>
      <th>Part num in inventory</th>
      <th>Supp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.part %></td>
        <td><%= part.part_name %></td>
        <td><%= part.part_cost %></td>
        <td><%= part.part_num_in_inventory %></td>
        <td><%= part.supp %></td>
        <td><%= link_to 'Show', part %></td>
        <td><%= link_to 'Edit', edit_part_path(part) %></td>
        <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

